<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanniboi.bibleinoneyear" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yanniboi.bibleinoneyear.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yanniboi.bibleinoneyear.RefreshActivity"
            android:label="@string/title_activity_refresh" >
        </activity>
        <activity
            android:name="com.yanniboi.bibleinoneyear.VideoActivity"
            android:label="@string/title_activity_video"
            android:screenOrientation="nosensor"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <meta-data android:name="minVersion" android:value="8"/>
            <meta-data android:name="isLaunchableActivity" android:value="true"/>
        </activity>
    </application>

</manifest>
